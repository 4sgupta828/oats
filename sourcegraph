#!/bin/bash
# Sourcegraph Manager Wrapper Script
# Easy commands to manage Sourcegraph services for UF Flow

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
MANAGER="$SCRIPT_DIR/tools/sourcegraph_manager.py"

# Check if Python script exists
if [ ! -f "$MANAGER" ]; then
    echo "‚ùå Sourcegraph manager not found at $MANAGER"
    exit 1
fi

# Execute the manager with all arguments
python3 "$MANAGER" "$@"
